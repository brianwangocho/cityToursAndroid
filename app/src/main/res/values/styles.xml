<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
         Customize your theme here.
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

    </style>
    <style name="TextAppearance.App.Button" parent="TextAppearance.MaterialComponents.Button">
        <item name="android:background">@color/black</item>
        <item name="android:textColor">@color/white</item>

    </style>

    <style name="ThemeOverlay.App.Button.TextButton" parent="Widget.MaterialComponents.Button">
        <item name="colorPrimary">#000</item>
    </style>

    <style name="profile_card" parent="Widget.MaterialComponents.CardView">
        <item name="android:background">@color/black</item>
    </style>

    <style name="navigationTheme">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="android:colorControlHighlight" tools:ignore="NewApi">@color/black</item>
    </style>
</resources>
